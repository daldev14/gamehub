---
import Card from "@/components/Card.astro";
import data from "@/data.json";
import Layout from "@/layouts/Layout.astro";
import SectionContainer from "@/components/SectionContainer.astro";

export async function getStaticPaths() {
  const pages = data.products;

  return pages.map((page) => {
    const { slug, name, description, background_image, price, categories } =
      page;

    return {
      params: { slug },
      props: { name, description, background_image, price, categories },
    };
  });
}

const { name, description, background_image, price, categories } = Astro.props;
---

<Layout title="GameHub - Product">
  <main>
    <SectionContainer>
      <div class="flex flex-col md:flex-row md:pt-10">
        <figure class="rounded overflow-hidden w-[1300px] h-[450px] shadow">
          <img
            src={background_image}
            alt={name}
            class="w-full h-full object-cover object-center"
          />
        </figure>
        <div class="px-4 flex flex-col gap-2 pt-5 md:py-0">
          <h3 class="font-bold text-wrap text-2xl md:text-3xl">{name}</h3>
          <p class="font-semibold md:text-xl">
            $ {price}.00
          </p>
          <p class="w-full text-pretty md:w-[700px]">{description}</p>
        </div>
      </div>
    </SectionContainer>

    <SectionContainer
      className="py-16 md:py-24 px-4"
      title="Productos similares"
      slug="/products"
      withHeader
    >
      <div class="grid gap-4 customContainer">
        {
          data.products
            .filter((product) => product.categories.includes("starwars"))
            .map((product) => {
              return <Card {...product} />;
            })
        }
      </div>
    </SectionContainer>
  </main>
</Layout>
