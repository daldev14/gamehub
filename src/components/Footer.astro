---
import Logo from "./Logo.astro";
import SectionContainer from "./SectionContainer.astro";

const LINKS = [
  { title: "Quienes somos" },
  { title: "Programa de fidelidad" },
  { title: "Nuestras tiendas" },
];
---

<footer class="py-10">
  <SectionContainer className="flex flex-col">
    <div
      class="flex flex-col gap-6 justify-between items-center border-b border-slate-300 pb-2 md:flex-row md:gap-0"
    >
      <Logo />
      <ul class="flex flex-col gap-4 items-center md:flex-row">
        {
          LINKS.map((link) => (
            <li class="text-gray-600 font-medium transition-colors duration-300 hover:text-indigo-700">
              <a href="/">{link.title}</a>
            </li>
          ))
        }
      </ul>
    </div>
    <span class="text-center text-gray-700 block pt-4 italic"
      >Desarrollado por <a
        href="https://github.com/daldev14"
        rel="noopener noreferrer"
        class="text-indigo-700 font-bold">@daldev14</a
      ></span
    >
  </SectionContainer>
</footer>
